{
	"i18n": true,
	"type": "tabs",
	"items": {
		"settings": {
			"type": "panel",
			"label": "Settings",
			"items": {
				"licenseKey": {
					"type": "text",
					"label": "License Key",
					"trim": true,
					"help": {
						"en": "Enter your license key here. You can buy one in the ALL SMART shop.",
						"de": "Geben Sie hier Ihren Lizenzschlüssel ein. Sie können einen im ALL SMART Shop kaufen."
					},
					"helpLink": "https://www.all-smart.net/produkt/iobroker-net-tools-v1-lizenz/",
					"xl": 12,
					"lg": 12,
					"md": 12,
					"sm": 12,
					"xs": 12
				},
				"divider1": {
					"type": "divider"
				},
				"interfaceSelectInfo": {
					"type": "staticText",
					"text": {
						"en": "Select the interface which will be used to scan for devices.",
						"de": "Wählen Sie die Schnittstelle aus, die für die Suche nach Geräten verwendet werden soll."
					},
					"newLine": true
				},
				"interface": {
					"type": "interface",
					"ignoreLoopback": true,
					"ignoreInternal": true,
					"xl": 3,
					"lg": 4,
					"md": 5,
					"sm": 6,
					"xs": 12,
					"newLine": true
				},
				"startIp": {
					"type": "text",
					"label": {
						"en": "Start IP address",
						"de": "Start IP Adresse"
