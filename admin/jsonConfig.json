					"trim": true,
					"placeholder": "192.168.0.1",
					"xl": 2,
					"lg": 2,
					"md": 3,
					"sm": 4,
					"xs": 12,
					"newLine": true
				},
				"endIp": {
					"type": "text",
					"label": {
						"en": "End IP address",
						"de": "Letzte IP Adresse"
					},
					"trim": true,
					"placeholder": "192.168.0.254",
					"xl": 2,
					"lg": 2,
					"md": 3,
					"sm": 4,
					"xs": 12
				},
				"descriptionIpRange": {
					"type": "staticText",
					"text": {
						"en": "If you do not enter a custom IP range Net Tools will determine it by interface configuration.<br>If the IP range is taken from interface configuration the scan process can take a long time to finish.",
						"de": "Falls kein benutzerdefinierter IP Bereich angeben wird, wird dieser von Net Tools anhand der Schnittstellenkonfiguration ermittelt.<br>Wenn der IP Bereich aus der Schnittstellenkonfiguration übernommen wird, kann der Scanvorgang sehr viel Zeit in Anspruch nehmen."
					},
					"newLine": true
				},
				"autoSearch": {
					"type": "checkbox",
					"label": {
						"en": "Auto discover devices",
						"de": "Automatische Erkennung von Geräten"
					},
					"newLine": true
				},
				"searchSchedule": {
					"type": "cron",
					"complex": true,
					"label": {
						"en": "Time schedule for the search",
						"de": "Zeitplan für die Suche"
					},
					"xl": 3,
					"lg": 3,
					"md": 5,
					"sm": 6,
					"xs": 12
				},
				"pingInterval": {
					"type": "number",
					"label": "Ping Interval",
					"xl": 2,
					"lg": 2,
					"md": 3,
					"sm": 4,
					"xs": 12,
					"newLine": true
				},
				"portScan": {
					"type": "checkbox",
					"label": "Port Scan",
					"xl": 5,
					"lg": 2,
					"md": 3,
					"sm": 4,
					"xs": 12,
					"newLine": true
				},
				"portList": {
					"type": "text",
					"label": "Port List",
					"xl": 12,
					"lg": 12,
					"md": 12,
					"sm": 12,
					"xs": 12,
					"newLine": true
				}
			}
