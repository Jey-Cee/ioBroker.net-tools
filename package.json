{
  "name": "iobroker.net-tools",
  "version": "1.2.3",
  "description": "This adapter cyclic polls configured IPs, can send wake-on-lan packages and scan for open ports.",
  "author": {
    "name": "Jey Cee",
    "email": "iobroker@all-smart.net"
  },
  "homepage": "https://github.com/Jey-Cee/ioBroker.net-tools",
  "license": "CC-BY-NC-4.0",
  "keywords": [
    "ioBroker",
    "poll",
    "ping",
    "ip",
    "wake-on-lan",
    "port scan"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Jey-Cee/ioBroker.net-tools.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "@iobroker/dm-utils": "^1.0.10",
    "wol": "1.0.7",
    "@network-utils/arp-lookup": "^2.1.0",
    "evilscan": "1.9.1",
    "oui": "^12.0.75",
    "@all-smart/all-smart-tools": "1.0.13",
    "cron": "^3.5.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/testing": "^5.1.1"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/i18n/*.{json,json5}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/Jey-Cee/ioBroker.net-tools/issues"
  },
  "readmeFilename": "README.md"
}
